<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/speedo_meter"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cpv_innerContourSize="0dp"
                app:cpv_outerContourSize="0dp"
                app:cpv_textColor="@color/transperant"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/speed_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="25"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:alpha="0.7"
                    android:text="km/h"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/drive_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persistent Drive"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_steering_wheel"
                    android:tint="@color/textGrey"
                    android:alpha="0.8"/>
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 km"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/speedometer"
                    android:tint="@color/textGrey"
                    android:alpha="0.8"/>
                <TextView
                    android:id="@+id/avg_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 km/hr"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="11/08/2018 11:37 pm"
                android:textSize="12sp"
                android:alpha="0.6"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:alpha="0.2"/>
</LinearLayout>